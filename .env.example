# =============================================================================
# WooCommerce Sync Service Configuration
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database - PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?options=-c%20search_path=woocommerce_sync
DB_DSN=postgresql://woocommerce:woocommerce123@localhost:5433/woocommerce_sync?options=-c%20search_path=woocommerce_sync

# API Authentication (for service-to-service calls)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your_generated_api_key_here

# Application
APP_HOST=0.0.0.0
APP_PORT=8002
APP_URL=http://localhost:8002

# Security - Credential Encryption
# Generate key using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# Scheduler Configuration
ENABLE_SCHEDULER=true
RECONCILIATION_HOUR=3
RECONCILIATION_MINUTE=0

# WooCommerce API Configuration
WC_API_VERSION=wc/v3
WC_PRODUCTS_PER_PAGE=100
WC_REQUEST_TIMEOUT=30

# Webhook Configuration
WEBHOOK_SECRET_LENGTH=32

# Google Cloud Platform (for Vertex AI embeddings)
# Set ENABLE_EMBEDDINGS=false if not using embeddings
ENABLE_EMBEDDINGS=false
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
